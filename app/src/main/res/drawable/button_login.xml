<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@color/blue_light2" android:startColor="@color/cyan_light2" />
            <corners android:radius="@dimen/size_30dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@color/blue_dark2" android:startColor="@color/cyan_dark2" />
            <corners android:radius="@dimen/size_30dp" />
        </shape>
    </item>
</selector>