<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.CustomAnimation" />

    <style name="AppTheme.NoActionBar.TransparentStatusBar" />

    <!-- Base application theme. -->
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ButtonRoundDefault" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/circular_std_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRoundBlue" parent="@style/ButtonRoundDefault">
        <item name="android:background">@drawable/button_login</item>
    </style>

    <style name="ButtonRoundPink" parent="@style/ButtonRoundDefault">
        <item name="android:background">@drawable/button_signup</item>
    </style>

    <style name="TextCardHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ash_dark</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <style name="TextPageHeader" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ash_dark</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5fa3d0</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextMessageBody" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:textColor">@color/ash_dark</item>
    </style>

    <style name="TextH6" parent="@android:style/TextAppearance">
        <item name="android:textSize">42sp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@color/ash_dark</item>
    </style>

    <style name="TextH5" parent="@android:style/TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@color/ash_semi_dark</item>
    </style>

    <style name="TextH4" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/circular_std_black</item>
        <item name="android:textColor">@color/ash_dark</item>
    </style>

    <style name="TextH1" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:textColor">@color/ash_semi_dark</item>
    </style>

    <style name="TextNavItem" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@color/selector_nav_item_color</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
